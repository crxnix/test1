<Window x:Class="payment_remastered_.Views.authorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:payment_remastered_.Views"
        mc:Ignorable="d"
        Title="authorizationWindow" Height="422" Width="444">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <DockPanel Grid.Row="1">
            <TextBlock Text="Логин" FontSize="25" VerticalAlignment="Center" Width="120"/>
            <TextBox x:Name="login" FontSize="25" VerticalAlignment="Center" Height="30"/>
        </DockPanel>
        <DockPanel Grid.Row="2">
            <TextBlock Text="Пароль" FontSize="25" VerticalAlignment="Center" Width="120"/>
            <PasswordBox x:Name="password" FontSize="25" VerticalAlignment="Center" Height="30"/>
        </DockPanel>
        <Button Grid.Row="3" Content="Вход" FontSize="30" Height="45" Width="100" Click="Button_Click"/>
    </Grid>
</Window>
