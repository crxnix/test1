<Window x:Class="payment_remastered_.Views.addGrp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:payment_remastered_.Views"
        mc:Ignorable="d"
        Title="addGrp" Height="327" Width="399">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Добавление группы" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        <DockPanel Grid.Row="1">
            <TextBlock Text="Название группы" Height="20" FontSize="15"/>
            <TextBox x:Name="grpName" Height="25"/>
        </DockPanel>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Добавить" FontSize="17" Height="30" Width="100" Click="Button_Click_1"/>
            <Button Grid.Column="1" Content="Закрыть" FontSize="17" Height="30" Width="100" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
